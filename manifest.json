{
  "manifest_version": 3,
  "name": "Netflix popup remover",
  "version": "1.0",
  "description": "Removes some irritating stuff",
  "content_scripts": [
    {
      "matches": [
      "*://*.netflix.com/*",
      "*://escapefromtarkov.fandom.com/*",
      "*://www.twitch.tv/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}